#!/usr/bin/env ruby

class Interface
  def initialize
    @board = [' ', ' ', ' ', ' ', ' ', ' ', ' ', ' ', ' ']
    @random_turn = (rand * 10).to_i
    @turn_counter = 0
    @win_combinations = [%w[1 2 3], %w[4 5 6], %w[7 8 9], %w[1 4 7], %w[2 5 8], %w[3 6 9], %w[1 5 9], %w[3 5 7]]
    @winss = false
  end
end
