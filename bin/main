#!/usr/bin/env ruby

class Interface
  def initialize
    @board = [' ', ' ', ' ', ' ', ' ', ' ', ' ', ' ', ' ']
    @random_turn = (rand * 10).to_i
    @turn_counter = 0
    @win_combinations = [%w[1 2 3], %w[4 5 6], %w[7 8 9], %w[1 4 7], %w[2 5 8], %w[3 6 9], %w[1 5 9], %w[3 5 7]]
    @winss = false
  end

  def welcome
    puts '* * *                         * * *'
    puts '*                                 *'
    puts '*     Welcome to Tic Tac Toe!     *'
    puts '                                   '
    puts '               | X | O             '
    puts '            ---+---+---            '
    puts '             O | X | X             '
    puts '            ---+---+---            '
    puts '               | O |               '
    puts '                                   '
    puts '*     Press "Enter" to start!     *'
    puts '*                                 *'
    puts '* * *                         * * *'
    puts
  end

  def play_again
    puts '* *                             * *'
    puts '*     Enter "A" to play again     *'
    puts '       ---------------------       '
    puts '*        Enter "E" to exit        *'
    puts '* *                             * *'
    hola = gets.chomp.upcase
    if hola == 'A'
      hola = Game.new
      hola.welcome
    end
    puts 'Thanks for playing' if hola == 'E'
  end

  def display_board
    puts
    puts '* *        Actual board:        * *'
    puts '*                                 *'
    puts "             #{board[0]} | #{board[1]} | #{board[2]}             "
    puts '            ---+---+---            '
    puts "             #{board[3]} | #{board[4]} | #{board[5]}             "
    puts '            ---+---+---            '
    puts "*            #{board[6]} | #{board[7]} | #{board[8]}            *"
    puts '* *                             * *'
    puts
  end
end
